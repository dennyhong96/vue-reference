rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.resource.contentType == "audio/mpeg" && 
        request.resource.size <= 10 * 1024 * 1024;
      allow delete: if request.auth != null;
    }
  }
}